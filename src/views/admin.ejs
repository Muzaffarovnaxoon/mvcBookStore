<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <header>
      <div class="container d-flex justify-content-between align-items-center">
        <h1 class="py-3">Admin panel</h1>
        <a href="/" class="btn btn-primary">Asosiy sahifa</a>
      </div>
    </header>

    <div class="container books-container">
      <div class="books">
        <h1>Kitoblar</h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Nomi</th>
              <th scope="col">Narxi</th>
              <th scope="col">Soni</th>
              <th scope="col">Tavsif</th>
              <th scope="col">Rasm</th>
            </tr>
          </thead>
          <tbody>
            <% books.forEach(el => { %>
            <tr>
              <th scope="row"><%= el.id %></th>
              <td><%= el.title %></td>
              <td><%= el.price %></td>
              <td><%= el.count %></td>
              <td><%= el.desc %></td>
              <td>
                <img
                  width="80"
                  height="50"
                  src="<%= el.img %>"
                  alt="<%= el.name %>"
                />
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>

        <!-- Button trigger modal -->
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#exampleModal"
        >
          Qo'shish
        </button>
        <!-- Modal -->
        <div
          class="modal fade"
          id="exampleModal"
          tabindex="-1"
          aria-labelledby="exampleModalLabel"
          aria-hidden="true"
        >
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Books Modal</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <form action="/books/create" method="post">
                  <input
                    required
                    class="form-control mb-3"
                    name="title"
                    type="text"
                    placeholder="Kitob nomini kiriting"
                  />
                  <input
                    required
                    class="form-control mb-3"
                    name="price"
                    type="number"
                    placeholder="Kitob narxini kiriting"
                  />
                  <input
                    required
                    class="form-control mb-3"
                    name="count"
                    type="text"
                    placeholder="Kitobdan nechta kiritamiz?"
                  />
                  <input
                    required
                    class="form-control mb-3"
                    name="img"
                    type="text"
                    placeholder="Kitob rasmi linkini kiriting"
                  />
                  <textarea
                    required
                    name="desc"
                    class="form-control mb-3"
                    placeholder="Tavsif yozing"
                  ></textarea>
                  <button type="submit" class="btn btn-primary w-100">
                    Save
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="authors">
        <h1>Mualliflar</h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Muallif</th>
            </tr>
          </thead>
          <tbody>
            <% authors.forEach(el => { %>
            <tr>
              <th scope="row"><%= el.id %></th>
              <td><%= el.name %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="categories">
        <h1>Categoriyalar</h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Category</th>
            </tr>
          </thead>
          <tbody>
            <% categories.forEach(el => { %>
            <tr>
              <th scope="row"><%= el.id %></th>
              <td><%= el.name %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="orders">
        <h1>Buyurtmalar</h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Kitob nomi</th>
              <th scope="col">Soni</th>
              <th scope="col">Umumiy narxi</th>
              <th scope="col">Telefon raqam</th>
              <th scope="col">Manzil</th>
              <th scope="col">Rasm</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(el => { %>
            <tr>
              <th scope="row"><%= el.id %></th>
              <td><%= el.book.title %></td>
              <td><%= el.count %></td>
              <td><%= el.book.price * el.count + 30000 %></td>
              <td><%= el.phone %></td>
              <td><%= el.address %></td>
              <td>
                <img
                  width="80"
                  height="50"
                  src="<%= el.book.img %>"
                  alt="<%= el.book.name %>"
                />
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
